# Spotify Stealth Automation Environment Variables
# Copy this file to .env and modify as needed

# Application Settings
NODE_ENV=production
SESSION_COUNT=3
LOG_LEVEL=info

# Container Role (for Docker deployment)
ROLE=session

# Display Settings (for Docker)
DISPLAY=:99

# Proxy Settings
PROXY_ROTATION_ENABLED=true
PROXY_TEST_ON_START=false

# Stealth Settings
STEALTH_MODE=enabled
RANDOM_USER_AGENT=true
RANDOM_VIEWPORT=true
RANDOM_TIMEZONE=true

# Performance Settings
MAX_CONCURRENT_SESSIONS=100
SESSION_TIMEOUT=300000
PAGE_TIMEOUT=30000

# Retry Settings
MAX_LOGIN_RETRIES=3
MAX_PROXY_RETRIES=3
RETRY_DELAY=5000

# Monitoring
HEALTH_CHECK_INTERVAL=30000
STATS_UPDATE_INTERVAL=60000

# Security
RUN_AS_NON_ROOT=true
DISABLE_DEV_SHM=false

# Optional: Redis Configuration (for large scale deployments)
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=

# Optional: Database Configuration
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=spotify_automation
# DB_USER=postgres
# DB_PASSWORD=
